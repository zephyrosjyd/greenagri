<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>greenagri</display-name>
  
  <context-param>
	  <param-name>driver</param-name>
	  <param-value>org.postgresql.Driver</param-value>
  </context-param>
  <context-param>
	  <param-name>url</param-name>
	  <param-value>jdbc:postgresql://localhost:5432/greenagri</param-value>
  </context-param>
  <context-param>
	  <param-name>username</param-name>
	  <param-value>postgres</param-value>
  </context-param>
  <context-param>
	  <param-name>password</param-name>
	  <param-value>postgres</param-value>
  </context-param>
  <listener>
  	<listener-class>listeners.ContextLoaderListener</listener-class>
  </listener>
  
  <servlet>
  	<servlet-name>BoardCrawler</servlet-name>
  	<display-name>BoardCrawler</display-name>
  	<description></description>
  	<servlet-class>crawling.BoardCrawler</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductCrawler</servlet-name>
  	<display-name>ProductCrawler</display-name>
  	<description></description>
  	<servlet-class>crawling.ProductCrawler</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Index</servlet-name>
  	<display-name>Index</display-name>
  	<description></description>
  	<servlet-class>index.Index</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PostRegister</servlet-name>
  	<display-name>PostRegister</display-name>
  	<description></description>
  	<servlet-class>crawling.manual.PostRegister</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductRegister</servlet-name>
  	<display-name>ProductRegister</display-name>
  	<description></description>
  	<servlet-class>crawling.manual.ProductRegister</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>BoardCrawler</servlet-name>
  	<url-pattern>/crawling/board</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductCrawler</servlet-name>
  	<url-pattern>/crawling/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Index</servlet-name>
  	<url-pattern>/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>PostRegister</servlet-name>
  	<url-pattern>/manreg/board</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductRegister</servlet-name>
  	<url-pattern>/manreg/product</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
